<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pro"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel_abc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rel_pro_stru"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/Sponsor_image2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/logo" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_editable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:src="@drawable/ic_edit_white_18dp" />
            </RelativeLayout>

            <View
                android:id="@+id/view12"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rel_pro_stru"
                android:background="#000000" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rel_pro_stru">

                <RelativeLayout
                    android:id="@+id/rel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rel_pro_stru">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/tableLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#1A237E"
                                    android:gravity="center"
                                    android:text="Basic Information "
                                    android:textColor="#ffffff"
                                    android:textSize="18sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tableRow4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:weightSum="2">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    android:id="@+id/first"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text="First Name "
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_first_name"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"

                                    android:inputType="textMultiLine"
                                    android:singleLine="false"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                android:weightSum="2">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1.3"
                                    android:text="Middle Name "
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_middle_name"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:inputType="textMultiLine"
                                    android:singleLine="false"
                                    android:text=""
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                android:weightSum="2">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1.3"
                                    android:text="Last Name  "
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_last_name"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:inputType="textMultiLine"
                                    android:singleLine="false"
                                    android:text=""
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text="Date Of Birth"
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_dob"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:clickable="true"
                                    android:editable="false"
                                    android:text=""
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:weightSum="2">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text="Age  "
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_age"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:digits="0123456789"
                                    android:inputType="number"
                                    android:text=""
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text="Gender"
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_gender"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:inputType="text"
                                    android:text=""
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:weightSum="2">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1.3"
                                    android:text="Qualification "
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_qualifi"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:inputType="textMultiLine"
                                    android:singleLine="false"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:text="Occupation : "
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_occup"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:inputType="textMultiLine"
                                    android:singleLine="false"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1.3"
                                    android:text="Email"
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_emaili"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:inputType="textEmailAddress"
                                    android:singleLine="false"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#1A237E"
                                    android:gravity="center"
                                    android:text="Contact Details "
                                    android:textColor="#ffffff"
                                    android:textSize="18sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1.3"
                                    android:text="Street Address "
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_addres"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:inputType="textMultiLine"
                                    android:singleLine="false"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1.3"
                                    android:text="City"
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_city"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:inputType="textMultiLine"
                                    android:singleLine="false"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1.3"
                                    android:text="Country "
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_country"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:inputType="textMultiLine"
                                    android:singleLine="false"
                                    android:textColor="@color/viewfinder_mask"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text="Country Code "
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/register_spin"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_weight="0.7"
                                    android:background="@null"></Spinner>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1.3"
                                    android:text="Mobile No."
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_phone"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:inputType="phone"
                                    android:text=""
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:visibility="gone">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:gravity="right"
                                    android:text="Phone : "
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_phone1"
                                    style="@style/Login_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:digits="0123456789"
                                    android:inputType="number"
                                    android:text=""
                                    android:textSize="15sp" />
                            </TableRow>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text="Password  "
                                    android:textSize="15sp" />

                                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                    android:id="@+id/edt_pasword"
                                    style="@style/Login_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:inputType="textPassword"
                                    android:singleLine="false"
                                    android:text=""
                                    android:textSize="15sp" />


                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rel_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rel"
                            android:layout_marginTop="15dp">

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomButton
                                android:id="@+id/btn_update"
                                style="@style/login_button_style"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="75dp"
                                android:background="@drawable/login_button_selector"
                                android:text="Update"
                                android:textAlignment="center"
                                android:textColor="#EEEDF2"
                                android:textSize="18sp" />

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomButton
                                android:id="@+id/btn_cancel"
                                style="@style/login_button_style"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="75dp"
                                android:background="@drawable/login_button_selector"
                                android:text="Cancel"
                                android:textAlignment="center"
                                android:textColor="#EEEDF2"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>