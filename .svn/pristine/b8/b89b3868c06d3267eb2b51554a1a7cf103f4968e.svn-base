<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="10dp" android:left="7dp" android:right="7dp" android:top="10dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/login_button_pressed_state_color" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Top blue color -->
            <item android:bottom="10dp" android:left="7dp" android:right="7dp" android:top="10dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/login_button_color" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

