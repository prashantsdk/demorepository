<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_solid">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cl_lightbackgrond">

        <ImageView
            android:id="@+id/iv_studentPhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_studentPhoto">

            <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                android:id="@+id/txt_studentName"
                style="@style/Login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#190710"
                android:textSize="19sp" />


            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_studentName"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                    android:id="@+id/txtDate"
                    style="@style/Login_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date :"
                    android:textColor="#190710"
                    android:textSize="15sp" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_issue"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_accept"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@color/cl_primary"
                    android:gravity="center"
                    android:text="Accept" />
                <Button
                    android:id="@+id/btn_decline"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:background="@color/red_solid"
                    android:gravity="center"
                    android:text="Decline" />

            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_main"
        android:layout_marginTop="5dp"
        android:background="#a9a9a9"
        android:orientation="horizontal" />
</RelativeLayout>