<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:id="@+id/pro"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel_abc"
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rel_pro_stru"
                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:background="@color/username_color">

                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                    android:id="@+id/first1"
                    style="@style/Login_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="5dp"
                    android:text=" "

                    android:textSize="28sp" />

            </RelativeLayout>


            <View
                android:id="@+id/view12"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"

                android:layout_below="@+id/rel_pro_stru"
                android:background="#000000" />

            <ScrollView
                android:id="@+id/sc1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/rel_pro_stru"
                android:background="#ECECEC">

                <RelativeLayout
                    android:id="@+id/rel"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/rel_pro_stru"
                    android:background="@color/username_color">

                    <LinearLayout
                        android:id="@+id/tableLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:layout_marginTop="35dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/tableRow4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:weightSum="2">

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                android:id="@+id/first"
                                style="@style/Login_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="First Name     : "
                                android:textSize="15sp" />

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                android:id="@+id/edt_first_name"
                                style="@style/Login_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:digits="asdfghjklpoiuytrewqzxcvbnmABCDEFGHIGKLMNOPQRSTUVWXYZ"

                                android:hint="Enter the first name"
                                android:inputType="text"
                                android:maxLength="35"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:nextFocusForward="@+id/edt_middle_name"

                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="visible"
                            android:weightSum="2">

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                style="@style/Login_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="Middle Name : "
                                android:textSize="15sp" />

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                android:id="@+id/edt_middle_name"
                                style="@style/Login_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:digits="asdfghjklpoiuytrewqzxcvbnmABCDEFGHIGKLMNOPQRSTUVWXYZ"
                                android:hint="Enter the middle name"
                                android:inputType="text"
                                android:maxLength="35"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:nextFocusForward="@+id/edt_last"

                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:weightSum="2">

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                style="@style/Login_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="Last Name     : "
                                android:textSize="15sp" />

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                android:id="@+id/edt_last"
                                style="@style/Login_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:digits="asdfghjklpoiuytrewqzxcvbnmABCDEFGHIGKLMNOPQRSTUVWXYZ"
                                android:hint="Enter the last name"
                                android:inputType="text"
                                android:maxLength="35"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:nextFocusForward="@+id/edt_email"

                                android:textSize="15sp" />

                            <!--   <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                   android:id="@+id/edt_last"
                                   style="@style/Login_title"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="2"
                                   android:background="@null"
                                   android:digits="0123456789"

                                   android:text=""
                                   android:textSize="18sp" />-->
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            android:weightSum="2">

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                style="@style/Login_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="Age : "
                                android:textSize="15sp" />

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                android:id="@+id/edt_age"
                                style="@style/Login_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:background="@null"
                                android:digits="0123456789"
                                android:inputType="number"
                                android:text=""
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:weightSum="2">

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                style="@style/Login_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="Email               : "
                                android:textSize="15sp" />

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                android:id="@+id/edt_email"
                                style="@style/Login_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:singleLine="true"
                                android:maxLength="254"
                                android:hint="Enter the email id"
                                android:inputType="textEmailAddress"
                                android:text=""
                                android:textSize="15sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:weightSum="2">

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                style="@style/Login_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:gravity="center_vertical"
                                android:text="Select Entity   :"
                                android:textSize="15sp" />

                            <RelativeLayout
                                android:id="@+id/gsr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_login"
                                android:layout_weight="1.2"
                                android:background="@drawable/oval_white_background_transparant">

                                <Spinner
                                    android:id="@+id/spinner"
                                    android:layout_width="140dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_horizontal"
                                    android:entries="@array/login_type"
                                    android:visibility="visible" />

                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            android:weightSum="2">

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                style="@style/Login_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Qualification : "
                                android:textSize="18sp" />

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                android:id="@+id/edt_qualifi"
                                style="@style/Login_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:background="@null"
                                android:text=""
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            android:weightSum="2">

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                                style="@style/Login_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Occupation : "
                                android:textSize="18sp" />

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                android:id="@+id/edt_occup"
                                style="@style/Login_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:background="@null"
                                android:text=""
                                android:textSize="18sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/gsr"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:weightSum="2">

                            <Spinner
                                android:id="@+id/spinnerPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:background="@drawable/oval_white"
                                android:gravity="center_horizontal"
                                android:visibility="visible" />

                            <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                                android:id="@+id/edt_phone"
                                style="@style/et_username_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:layout_weight="0.5"
                                android:hint="Phone No."
                                android:inputType="number"
                                android:maxLength="10"
                                android:singleLine="true"

                                android:textColor="#393939"
                                android:textColorHint="#393939"
                                android:textSize="15sp" />
                        </LinearLayout>


                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/rl_progressBar"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:background="#000000"
                        android:visibility="gone">

                        <ProgressBar
                            android:id="@+id/progressbar"
                            style="@android:style/Widget.ProgressBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp" />

                        <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                            android:id="@+id/tv_please_wait"
                            style="@style/Login_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/progressbar"
                            android:text="Please wait..."
                            android:textColor="#ffffff"
                            android:textSize="18sp" />
                    </RelativeLayout>
                </RelativeLayout>


            </ScrollView>

            <RelativeLayout
                android:id="@+id/rel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sc1"
                android:layout_marginTop="15dp"

                >

                <com.blueplanet.smartcookieteacher.customcomponents.CustomButton
                    android:id="@+id/btn_send"
                    style="@style/login_button_style"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="34dp"
                    android:background="@drawable/login_button_selector"
                    android:text="Send Request"
                    android:textAlignment="center"
                    android:textColor="#EEEDF2"
                    android:textSize="18sp" />

                <com.blueplanet.smartcookieteacher.customcomponents.CustomButton
                    android:id="@+id/btn_cancel"
                    style="@style/login_button_style"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/login_button_selector"
                    android:text="Clear"
                    android:textAlignment="center"
                    android:textColor="#EEEDF2"
                    android:textSize="18sp" />

            </RelativeLayout>

            <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                android:id="@+id/toast_msg"
                style="@style/Login_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_button"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:text=" "
                android:textSize="22sp" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>