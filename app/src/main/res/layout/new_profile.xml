<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <RelativeLayout
                android:id="@+id/relayu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relayout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"

                android:paddingBottom="10dp">

                <RelativeLayout
                    android:id="@+id/re_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/iv_studentPhoto"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/logo" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/stdName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/re_1"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/txt_teachername"
                        style="@style/Login_title"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:text="Teacher Name : "
                        android:textColor="#190710"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                        android:id="@+id/txt_name"
                        style="@style/Login_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:gravity="left"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#190710"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/firName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stdName"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/txt_StudentcollageName"
                        style="@style/Login_title"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:text="DOB : "
                        android:textColor="#190710"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                        android:id="@+id/Txt_dob"
                        style="@style/Login_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:gravity="left"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#190710"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/prn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/firName"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/txt_StudePRN"
                        style="@style/Login_title"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:text="Age: "
                        android:textColor="#190710"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                        android:id="@+id/Txt_age"
                        style="@style/Login_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:gravity="left"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#190710"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prn"

                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/txt_stgender"
                        style="@style/Login_title"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:text="Gender : "
                        android:textColor="#190710"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                        android:id="@+id/txt_gender"
                        style="@style/Login_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:gravity="left"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#190710"
                        android:textSize="15sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gender"

                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/txt_Dob"
                        style="@style/Login_title"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:text="Qulification : "
                        android:textColor="#190710"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                        android:id="@+id/txt_qulification"
                        style="@style/Login_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:gravity="left"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#190710"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dob"

                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/txtemail"
                        style="@style/Login_title"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:text="Email : "
                        android:textColor="#190710"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                        android:id="@+id/txt_email"
                        style="@style/Login_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:gravity="left"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#190710"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ageh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age"

                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/txt_agie"
                        style="@style/Login_title"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:text="phone: "
                        android:textColor="#190710"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                        android:id="@+id/txt_phone"
                        style="@style/Login_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:gravity="left"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#190710"
                        android:textSize="15sp" />
                </LinearLayout>


            </RelativeLayout>


            <com.blueplanet.smartcookieteacher.customcomponents.CustomButton
                android:id="@+id/btn_update"
                style="@style/login_button_style"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_below="@+id/relayu"
                android:layout_centerHorizontal="true"

                android:background="@drawable/login_button_selector"
                android:gravity="center"
                android:text="Update"
                android:textColor="@color/white_solid"
                android:textSize="15dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>