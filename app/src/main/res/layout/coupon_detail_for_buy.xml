<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border">

            <RelativeLayout
                android:id="@+id/re1"
                android:layout_width="330dp"
                android:layout_height="350dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/boarder_green">

                <ImageView
                    android:id="@+id/coupon_img"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/logo"/>

                <TextView
                    android:id="@+id/txtcompname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coupon_img"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:text="PIZZA"
                    android:textColor="#5A5A5A"
                    android:textSize="19sp" />


                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtcompname"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:text="PIZZA"
                    android:textColor="#5A5A5A"
                    android:textSize="19sp" />


                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtoff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30% OFF"
                        android:textColor="#00A745"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txtPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="(30% OFF)"
                        android:textColor="#C1310C"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout1"
                    android:layout_centerHorizontal="true"
                    android:textColor="#5A5A5A"
                    android:textSize="20sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re1"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/ll_facebook"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:background="#C1310C"
                    android:clickable="true">

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/img_cart"
                        style="@style/fontawesome_style"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/cart"
                        android:textColor="@color/facebook_img_color" />

                    <TextView
                        android:id="@+id/txt_card"
                        style="@style/Login_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/img_cart"
                        android:text="Cart"
                        android:textColor="@color/white_solid"
                        android:textColorHint="#000000"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_fa"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/re1"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/ll_facebook"
                    android:background="#00A745"
                    android:clickable="true">


                    <TextView
                        android:id="@+id/txt_Buy"
                        style="@style/Login_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="19dp"
                        android:clickable="true"
                        android:text="Buy"
                        android:textColor="@color/white_solid"
                        android:textColorHint="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
            <!--    <RelativeLayout
                    android:id="@+id/rebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/re1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/btn_add_to_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add to cart" />

                    <Button
                        android:id="@+id/btn_buy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/btn_add_to_cart"
                        android:layout_marginLeft="10dp"
                        android:text="Buy now" />
                </RelativeLayout>-->


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>