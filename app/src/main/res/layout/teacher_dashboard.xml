<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F4F3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                    android:id="@+id/testproduction"
                    style="@style/Login_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <com.github.siyamed.shapeimageview.HexagonImageView
                    android:id="@+id/teacher_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/testproduction"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    app:siBorderColor="#00ff00"
                    app:siBorderWidth="3dp" />

                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                    android:id="@+id/text_wat"
                    style="@style/Login_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/teacher_img"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="4dp"
                    android:text="Teacher"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/teacher_img">

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/text_name"
                        style="@style/TeacherName_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Shashikant Ghumbre"
                        android:inputType="textCapWords"
                        android:textColor="@color/black_solid"
                        android:textSize="15sp" />

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/txt_colgname"
                        style="@style/Login_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_name"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:text="collage of Engineering,Pune" />

                    <LinearLayout
                        android:id="@+id/ll_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_colgname"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:textSize="10sp">

                        <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                            android:id="@+id/teacher_id"
                            style="@style/Login_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teacher ID :"
                            android:textSize="12sp" />

                        <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                            android:id="@+id/txt_teacher_id"
                            style="@style/Login_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="231456"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rl_2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/rl_1"
                android:weightSum="100">

                <RelativeLayout
                    android:id="@+id/linlay_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="25">

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/greenpoint"
                        style="@style/Login_title"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="1dp"
                        android:background="@drawable/green_point"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/text_waterpoint"
                        style="@style/Login_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/greenpoint"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="Green Points"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relay_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/linlay_image"
                    android:layout_weight="25">

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/bluepoint"
                        style="@style/Login_title"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="1dp"
                        android:background="@drawable/blue_point"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/text_bluepoint"
                        style="@style/Login_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bluepoint"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="Blue Points"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/relay_image"
                    android:layout_weight="25">

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/brownpoint"
                        style="@style/Login_title"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="1dp"
                        android:background="@drawable/brown_point"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/text_brownpoint"
                        style="@style/Login_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/brownpoint"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="Brown Points"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rela_image"
                    android:layout_weight="25">

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/waterpoint"
                        style="@style/Login_title"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="1dp"
                        android:background="@drawable/water_point"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/cl_primary"
                        android:textSize="14sp" />

                    <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                        android:id="@+id/textwaterpoint"
                        style="@style/Login_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/waterpoint"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="Water Points"
                        android:textColor="#000000"
                        android:textSize="12dp" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/rl_2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                    android:id="@+id/studentlist"
                    style="@style/Login_title"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" My Student List  : "
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                    android:id="@+id/txt_studentcount"
                    style="@style/Login_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/studentlist"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="17sp" />
            </RelativeLayout>

            <ListView
                android:id="@+id/lv_studentDashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_3"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/border"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:id="@+id/linearlayoutONE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearlayoutONE"
                android:layout_centerInParent="true"
                android:background="#000000"
                android:orientation="vertical"
                android:visibility="visible">

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center" />
                <com.blueplanet.smartcookieteacher.customcomponents.CustomTextView
                    android:id="@+id/tv_please_wait"
                    style="@style/Login_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@+id/progressbar"
                    android:text="Student List Loading..."
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>
