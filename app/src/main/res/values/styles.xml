<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <item name="android:windowActionBar">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <!--  your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>-->
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls  -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ReeweActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>


    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="background">@color/colorPrimary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AfterLoginTheme" parent="Theme.AppCompat" />

    <!-- Application theme. -->
    <style name="AppTheme1" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
</style>

    <style name="Login_title">
        <item name="com.blueplanet.smartcookieteacher:customFont">@string/lato_regular</item>
    </style>
    <style name="TeacherName_title">
        <item name="com.blueplanet.smartcookieteacher:customFont">@string/lato_bold</item>
    </style>
    <style name="et_username_style">
        <item name="com.blueplanet.smartcookieteacher:customTextFont">@string/lato_regular</item>
    </style>


    <style name="fontawesome_style">
        <item name="com.blueplanet.smartcookieteacher:customFont">@string/fontawesome_webfont</item>
    </style>
    <style name="login_button_style">
        <!--<item name="com.blueplanet.smartcookieteacher:typeface">@string/lato_regular</item>-->
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#5fa3d0</item>
        <item name="android:background">#FFFFFF</item>
    </style>


    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar"/>
</resources>
