<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ll_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_login"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_button_selector"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/teacherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="15dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_username"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/relayoutLayout1"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"

        android:padding="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/txt_lay1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_below="@+id/txt_couPoint"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tID2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher ID "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="25dp" />




            </LinearLayout>
            <LinearLayout
                android:id="@+id/txt_schoolname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_lay1"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School Name :"
                    android:textColor="#000000"

                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_scname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="ff"
                    android:textColor="#000000"
                    android:textSize="15dp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/txt_balancebluepoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_schoolname"

                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blance Blue Points :"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/txt_balbluepoint"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="15dp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/txt_couPointt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_balancebluepoint"

                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reason :"
                    android:textColor="#000000"

                    android:textSize="20dp" />
                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                    android:id="@+id/txt_reason"
                    style="@style/Login_title"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@null"
                    android:inputType="text"
                    android:singleLine="true"
                    android:text=""
                    android:hint="Enter Reason"
                    android:textSize="18sp" />
            <!--    <EditText
                    android:id="@+id/txt_reason"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:hint="Enter Reason"

                    android:layout_marginTop="1dp"
                    android:textColor="#000000"
                    android:textSize="15dp" />-->


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_couPointt"

                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="points :"
                    android:textColor="#000000"
                    android:textSize="20dp" />
                <com.blueplanet.smartcookieteacher.customcomponents.CustomEditText
                    android:id="@+id/txt_point"
                    style="@style/Login_title"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@null"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:text=""
                    android:layout_marginLeft="17dp"
                    android:hint="Enter Point"
                    android:textSize="18sp" />
            <!--  <EditText
                    android:id="@+id/txt_point"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:text=""

                    android:textColor="#000000"
                    android:textSize="15dp" />-->


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_issue"
              android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

               <Button
                   android:id="@+id/btn_share"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="share"

                   android:background="@color/cl_primary"
                   android:gravity="center"
                   />


            </LinearLayout>


        </LinearLayout>
        </LinearLayout>
            </RelativeLayout>
        </ScrollView>

</RelativeLayout>